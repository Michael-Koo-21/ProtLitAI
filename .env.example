# ProtLitAI Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Database Paths
DB_PATH=data/literature.db
ANALYTICS_DB_PATH=data/analytics.db

# API Keys (optional)
PUBMED_API_KEY=your_pubmed_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# API Rate Limits (requests per second)
PUBMED_RATE_LIMIT=10.0
ARXIV_RATE_LIMIT=1.0
SCHOLAR_RATE_LIMIT=0.5

# ML Model Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
SPACY_MODEL=en_core_sci_lg
DEVICE=mps
BATCH_SIZE=32
MAX_MEMORY_GB=6.0

# Storage Paths
PDF_STORAGE_PATH=cache/pdfs
EMBEDDING_CACHE_PATH=cache/embeddings
MODEL_CACHE_PATH=models

# Logging Configuration
LOG_FILE=logs/protlitai.log
LOG_ROTATION_MB=100

# Collection Settings
COLLECTION_SCHEDULE="0 6 * * *"
MAX_PAPERS_PER_DAY=1000
RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30